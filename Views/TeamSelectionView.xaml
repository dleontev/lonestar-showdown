                                          Grid.ColumnSpan="3">
                                        <ContentControl HorizontalAlignment="Center" Style="{StaticResource FullJerseyBack}" />
                                        <Border Margin="5"
                                                VerticalAlignment="Bottom"
                                                Background="#FFFFFF"
                                                BorderBrush="{StaticResource TitleForegroundColor}"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                Padding="5">
                                            <TextBlock Height="150"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="100"
                                                       Text="{Binding FirstElevenNames[0]}" />
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Row="2"
                                          Grid.RowSpan="3"
                                          Grid.Column="1"
                                          Margin="8,0,0,0">
                                        <Viewbox Stretch="Uniform">
                                            <TextBlock FontWeight="ExtraBold"
                                                       Foreground="#FFFFFF"
                                                       Text="{Binding FirstElevenNumbers[0]}"
                                                       TextOptions.TextRenderingMode="ClearType"
                                                       TextWrapping="Wrap" />
                                        </Viewbox>
                                    </Grid>
                                </Grid>
                            </Viewbox>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
