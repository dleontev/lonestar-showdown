                                <DataGridTemplateColumn Header="Change Position To">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <Button Width="20"
                                                        Height="20"
                                                        MinWidth="10"
                                                        MinHeight="10"
                                                        Margin="5"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        cal:Message.Attach="[Event Click] = [Action ResetPositionAction($dataContext)]">
                                                    <Path Margin="1"
                                                          Data="{StaticResource RejectIcon}"
                                                          Fill="#FFFFFF"
                                                          Stretch="Fill" />
                                                </Button>
                                                <ComboBox Grid.Column="1"
                                                          Foreground="Black"
                                                          ItemsSource="{Binding AvailablePositions}"
                                                          SelectedItem="{Binding SelectedPosition,
                                                                                 Mode=OneWayToSource,
                                                                                 UpdateSourceTrigger=PropertyChanged}"
                                                          cal:Message.Attach="[Event SelectionChanged] = [Action ChangePositionAction('false')]" />
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Binding="{Binding LineUpPosition}"
                                                    Header="Position Selected"
                                                    SortDirection="Descending" />
                                <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                                <DataGridTextColumn Binding="{Binding Position}" Header="Preferred Position" />
